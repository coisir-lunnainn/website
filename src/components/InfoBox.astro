---
import { Image } from "astro:assets";
interface Props {
  src: ImageMetadata;
  alt: string;
}

const { src, alt } = Astro.props;
---

<section
  class="grid items-center mt-12 grid-flow-row md:grid-rows-1 md:grid-cols-2 lg:grid-cols-1"
>
  <Image
    {src}
    {alt}
    width="1920"
    height="1080"
    class="row-start-1 col-start-1 w-full lg:w-[60%] self-start pl-0 h-[420px] object-cover"
  />
  <div
    class="mt-6 flex flex-col gap-4 w-full lg:max-w-[60%] mx-auto bg-white row-start-2 md:row-start-1 col-start-1 md:col-start-2 lg:col-start-1 p-10 lg:ml-[40%]"
  >
    <slot />
  </div>
</section>
