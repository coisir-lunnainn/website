---
import { getEntry } from "astro:content";

const { label } = Astro.props;

const section = await getEntry("sections", label);
---

<div
  class="px-4 prose sm:prose-lg prose-p:my-3 prose-h1:font-thin prose-h1:text-3xl prose-h1:mt-5 prose-h1:mb-1"
  data-editable={label}
>
  {section ? <Fragment set:html={section?.body} /> : <slot />}
</div>
